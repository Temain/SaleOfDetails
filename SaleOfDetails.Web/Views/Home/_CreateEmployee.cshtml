<!-- ko with: createEmployee -->
<div class="heading">
    <a href="#" class="back-link" data-bind="click: $root.navigateToEmployee, tooltip: { title: 'Вернуться назад', placement: 'bottom', trigger: 'hover' }"><i class="fa fa-arrow-circle-left"></i></a>
    <h2>Добавление сотрудника</h2>
</div>
<form class="form-horizontal">
    <div class="form-group">
        <label for="lastName" class="col-sm-4 control-label">Фамилия</label>
        <div class="col-sm-20">
            <input class="form-control" id="lastName" data-bind="value: lastName">
        </div>
    </div>
    <div class="form-group">
        <label for="firstName" class="col-sm-4 control-label">Имя</label>
        <div class="col-sm-20">
            <input class="form-control" id="firstName" data-bind="value: firstName">
        </div>
    </div>
    <div class="form-group">
        <label for="middleName" class="col-sm-4 control-label">Отчество</label>
        <div class="col-sm-20">
            <input class="form-control" id="middleName" data-bind="value: middleName">
        </div>
    </div>
    <div class="form-group">
        <label for="employeeDateStart" class="col-sm-4 control-label">Дата начала работы</label>
        <div class="col-sm-20">
            <div class='input-group date'>
                <input type='text' id='employeeDateStart' class="form-control" data-bind="datepicker: employeeDateStart, datepickerOptions : { locale: 'ru', format: 'DD.MM.YYYY' }" />
                <span class="input-group-addon">
                    <i class="fa fa-calendar" aria-hidden="true"></i>
                </span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-20">
            <button type="submit" class="btn btn-primary" data-bind="click: save"><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Сохранить</button>
        </div>
    </div>
</form>
<!-- /ko -->
